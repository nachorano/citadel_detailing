{
  "author": "Nombre e Email",
  "description": "Web Citadel",
  "license": "MIT",
  "name": "Citadel-Webpage",
  "scripts": {
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "build:css": "node-sass --output-style compressed scss/styles.scss css/main.css && npm run css-autoprefixer",
    "css-autoprefixer": "\"postcss -u autoprefixer -r css/main.css\""
  },
  "version": "1.0.0",
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "node-sass": "^4.14.1",
    "postcss-cli": "^6.1.3"
  }
}
